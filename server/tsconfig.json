{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/js",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"]
  },
  "compileOnSave": true,
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode", "./coverage", "./dist", "jest.config.js"]
}
